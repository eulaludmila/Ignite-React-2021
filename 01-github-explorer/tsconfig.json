{
  "compilerOptions": {      
    /*
      allowJs --> aceitar arquivos tanto js quanto ts
      jsx --> avisar que utilizamos tsx
      noEmit --> não emitir caso faça um build
      strict --> não entrar modo strict
      resolveJsonModule --> possibilidade de aceitar arquivos .json
    */                
    "lib": ["dom", "dom.iterable", "esnext"],//adiciona funcionalidades                           
    "allowJs": true,                           
    "jsx": "react-jsx",    
    "noEmit": true,             
    "strict": true,
    "moduleResolution": "node",   
    "resolveJsonModule": true,    
    "isolatedModules": true, 
    "allowSyntheticDefaultImports": true,      
    "esModuleInterop": true,   
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true      
  },
  /*
    include --> dizer ao typescript que todo o nosso código tsx está dentro de src
  */
  "include": ["src"]
}
